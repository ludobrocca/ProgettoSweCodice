<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AuthenticatedUser">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ButtonGroups"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent">
        <TextView
                android:text="@string/wow_you_re_logged"
                android:layout_width="93dp"
                android:layout_height="49dp" tools:layout_editor_absoluteY="340dp"
                tools:layout_editor_absoluteX="160dp" android:id="@+id/logged_message" android:textAlignment="center"
                android:textSize="18sp" tools:text="Wow| You're logged!"/>
        <Button
                android:text="@string/logout"
                android:layout_width="117dp"
                android:layout_height="72dp" tools:layout_editor_absoluteY="415dp"
                tools:layout_editor_absoluteX="160dp" android:id="@+id/logout_button"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>