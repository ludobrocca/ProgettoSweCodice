<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:openDrawer="start"
        android:background="@color/colorSecondaryAccent"
        android:gravity="start">
        <TextView
                android:text="Enter time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTime"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="330dp"/>
        <EditText
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:inputType="number"
                android:ems="10"
                android:layout_marginHorizontal="155dp"
                android:layout_marginTop="360dp"
                android:autofillHints=""
                android:id="@+id/editHours"/>
        <TextView
                android:text=" : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textDoublePoint"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="370dp"/>
        <EditText
                android:layout_width="46dp"
                android:layout_height="44dp"
                android:inputType="number"
                android:ems="10"
                android:layout_marginHorizontal="210dp"
                android:layout_marginTop="360dp"
                android:autofillHints=""
                android:id="@+id/editMinutes"/>
        <Button
                android:text="Set alarm clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setalarm"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="420dp"/>
</android.support.design.widget.CoordinatorLayout>