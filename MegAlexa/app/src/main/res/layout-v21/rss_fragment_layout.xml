<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/rss_fragment_container"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:padding="16dp"
              android:orientation="vertical"
              tools:openDrawer="start"
              android:background="@color/colorSecondaryAccent"
              android:gravity="center"

>

    <TextView
            android:id="@+id/Url"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:labelFor="@+id/Url"
            android:textStyle="bold"
            android:text="@string/add_feedrss" tools:text="@string/add_feedrss"/>


    <EditText
            android:id="@+id/insert_URL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:labelFor="@id/insert_URL"
            android:layout_marginTop="8dp"
            android:inputType="textUri"
            android:autofillHints=""
            tools:targetApi="o"
    />

    <Button
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            android:layout_marginTop="8dp"


    />


</LinearLayout>



